---
// Define metadata properties
const title = "FinTime - Modern Financial Time-Tracking";
const description = "Modern financial time-tracking for structured daily insights. Log activities with durations, categorize tasks, view monthly summaries, and use across all devices.";
const keywords = ["time tracking", "financial tracking", "productivity", "task management"];

// Get props
interface Props {
	title?: string;
}

const { title: propTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{propTitle || title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords.join(", ")} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
